{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "jsx": "react"
    },
    "include": [
        "src/**/*", "spec"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}